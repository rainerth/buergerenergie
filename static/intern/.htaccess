AuthType Basic
AuthName "Interner Bereich - Bürgerenergie Bösingen"
# HTPASSWD_PATH wird vom Build-Script gesetzt
AuthUserFile __HTPASSWD_PATH__
Require valid-user

# Sicherheitsheader
Header always set X-Content-Type-Options nosniff
Header always set X-Frame-Options DENY
Header always set X-XSS-Protection "1; mode=block"
Header always set Referrer-Policy "strict-origin-when-cross-origin"

# CSV-Download erlauben für authentifizierte Benutzer
<Files "interessenten.csv">
    Require valid-user
</Files>

# Blockiere direkten Zugriff auf .htpasswd
<Files ".htpasswd">
    Order deny,allow
    Deny from all
</Files>

# Blockiere Verzeichnis-Listing
Options -Indexes

<Files "*.htaccess">
    Order deny,allow
    Deny from all
</Files>

# Nur HTML-Dateien erlauben
<FilesMatch "\.(html|htm)$">
    Order allow,deny
    Allow from all
</FilesMatch>
