AuthType Basic
AuthName "Interner Bereich - Bürgerenergie Bösingen"
AuthUserFile /var/www/html/intern/.htpasswd
Require valid-user

# Sicherheitsheader
Header always set X-Content-Type-Options nosniff
Header always set X-Frame-Options DENY
Header always set X-XSS-Protection "1; mode=block"

# Blockiere direkten Zugriff auf sensible Dateien
<Files "*.csv">
    Order deny,allow
    Deny from all
</Files>

<Files "*.htpasswd">
    Order deny,allow
    Deny from all
</Files>

<Files "*.htaccess">
    Order deny,allow
    Deny from all
</Files>

# Nur HTML-Dateien erlauben
<FilesMatch "\.(html|htm)$">
    Order allow,deny
    Allow from all
</FilesMatch>
